{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@store-monorepo/service/cloudinary": [
        "libs/service/cloudinary/src/index.ts"
      ],
      "@store-monorepo/service/guard": ["libs/service/guard/src/index.ts"],
      "@store-monorepo/service/prisma": ["libs/service/prisma/src/index.ts"],
      "@store-monorepo/service/redis": ["libs/service/redis/src/index.ts"],
      "@store-monorepo/template/admin-template": [
        "libs/template/admin-template/src/index.ts"
      ],
      "@store-monorepo/template/environment": [
        "libs/template/environment/src/index.ts"
      ],
      "@store-monorepo/template/login": ["libs/template/login/src/index.ts"],
      "@store-monorepo/template/shared": ["libs/template/shared/src/index.ts"],
      "@store-monorepo/template/shop-template": [
        "libs/template/shop-template/src/index.ts"
      ],
      "@store-monorepo/template/store": ["libs/template/store/src/index.ts"],
      "@store-monorepo/utility": ["libs/utility/src/index.ts"],
      "@store-monorepo/service/rabbitmq": ["libs/service/rabbitmq/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
